<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.txystem.checkin" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CheckIN</name>
    <description>
        Um aplicativo de Produtivade Financeira
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        TXystem Enterprise
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="res/screen/android/splash-checkin-frame1.png" />
        <splash src="res/screen/android/splash-checkin-frame2.png" />
        <splash src="res/screen/android/splash-checkin-frame3.png" />
        <splash src="res/screen/android/splash-checkin-frame4.png" />
        <preference name="ShowSplashScreenSpinner" value="false" />
    	<preference name="FadeSplashScreenDuration" value="750"/>

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/checkin-icon.png" />
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
</widget>
